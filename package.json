{
  "name": "api-services",
  "version": "0.1.0",
  "description": "Monorepo of SumOfUs' serverless services",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "flow": "flow",
    "test": "jest"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SumOfUs/api-services.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SumOfUs/api-services/issues"
  },
  "homepage": "https://github.com/SumOfUs/api-services#readme",
  "devDependencies": {
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "flow-bin": "^0.59.0",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "prettier": "^1.8.2"
  },
  "prettier": {
    "parser": "babylon",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "node": "6.10"
          }
        }
      ]
    ],
    "plugins": [
      "transform-flow-strip-types",
      "transform-object-rest-spread"
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    }
  }
}
